<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home_maintenance_man.HomeFragmentMainMan"
    android:id="@+id/home_fragment_main_man"
    android:background="@drawable/tow_layer_color">

    <TextView
        android:id="@+id/hello_mainMan_text"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/back4"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:elevation="20dp"
        android:padding="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="280dp"
        android:layout_height="80dp"


        android:background="@drawable/back3"
        android:gravity="center"
        android:text="ברוך הבא ל TechNet!"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        android:elevation="20dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"



        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_mainMan_text"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/mainMan_explanation"
        android:layout_width="280dp"
        android:layout_height="200dp"

        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/mainManExplanation"
        android:background="@drawable/homepage_back2"
        android:elevation="20dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintVertical_bias="0.1"
         />

    <TextView
        android:id="@+id/count_my_open_mal"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:background="@drawable/homepage_back"
        android:gravity="center"
        android:text="אין תקלות פתוחות עדיין"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:elevation="20dp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainMan_explanation"
        app:layout_constraintVertical_bias="0.15" />
</androidx.constraintlayout.widget.ConstraintLayout>