<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.maintenance_man_malfunctions.MainManMalfunctionsFragment">


    <Button
        android:id="@+id/btnDeleteMalfunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_malfunction_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/malfunctions_dont_exist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mot_existing_malfunction_to_display"
        android:textColor="@color/teal"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/listviewMainManMalfunctions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:divider="#FF0000"
        android:dividerHeight="2dip"
        android:textSize="50sp"

        app:layout_constraintTop_toBottomOf="@+id/btnDeleteMalfunction" />


</androidx.constraintlayout.widget.ConstraintLayout>