<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tow_layer_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/search_button"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:hint="חיפוש"
        android:inputType="text"
        android:minHeight="48dp"

        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:elevation="20dp"
        android:drawableRight="@drawable/ic_search"
        android:drawablePadding="5dp"/>
        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:text="לא קיימים מוצרים להצגה"
            android:textColor="#86C5C5"
            android:textSize="20dp"
            android:layout_marginRight="0dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="right"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:divider="#058074"
        android:dividerHeight="3dip"


        android:textSize="50sp" />

<!--        <TextView-->
<!--            android:id="@+id/empty"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="0dp"-->
<!--            android:gravity="center"-->
<!--            android:text="לא קיימים מוצרים להצגה"-->
<!--            android:textColor="#86C5C5"-->
<!--            android:textSize="15dp" />-->
<!--            New Project Button-->
    <RelativeLayout
        android:id="@+id/fragment_profile_project_relLayoutButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="7dp"
        android:layout_alignBottom="@+id/listview"

        android:gravity="left">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:background="@drawable/delete_size"
            android:shadowColor="@color/black"
            android:gravity="left"
            android:paddingHorizontal="5dp"
             />
    </RelativeLayout>


    <!--        List View-->
</RelativeLayout>
